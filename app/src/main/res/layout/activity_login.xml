<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wave_background" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="-1dp"
                    app:cardCornerRadius="95dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/doc_icon"
                        android:contentDescription="Doctor and Patient" />
                </androidx.cardview.widget.CardView>


            </FrameLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
            android:gravity="center"
            android:orientation="vertical"
            android:text="Welcome to"
            android:textSize="14sp"
            android:textColor="@color/light_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:orientation="vertical"
                android:text="DocFinder"
                android:textSize="18sp"
                android:textColor="@color/light_black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:text="“We Bring Care to You”"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/pink"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/Entermobilenumber">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_signin_mobile_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_call"
                        android:inputType="number"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ProgressBar
                    android:id="@+id/login_progressBarId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signin_button_id"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Signin"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue_primary"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:cornerRadius="50dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Dont"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/goto_signup_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Signup"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
